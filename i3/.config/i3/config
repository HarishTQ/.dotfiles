# HarishTQ's i3 config file

# Variables

set $mod        Mod4
set $smod       Shift
set $enter      Return

set $up l
set $down k
set $left j
set $right semicolon

set $launcher   rofi
set $browser    google-chrome
set $terminal   alacritty
set $compositor picom

set $font       pango:monospace
set $fontSize   8

# Important Configs

exec --no-startup-id dex --autostart --environment i3
default_border pixel 2
default_floating_border pixel 0
focus_follows_mouse    yes
font $font $fontSize

gaps inner 3px
gaps outer 2px
smart_gaps on
# Applications

bindsym $mod+$enter exec --no-startup-id $terminal
bindsym $mod+$smod+$enter exec --no-startup-id $browser
bindsym $mod+d exec --no-startup-id $launcher -show drun

bindsym $mod+$smod+q kill
bindsym $mod+f fullscreen toggle                
bindsym $mod+$smod+f floating toggle           

bindsym $mod+$smod+e exec --no-startup-id i3-msg exit     
bindsym $mod+$smod+r exec --no-startup-id reboot 
bindsym $mod+$smod+t exec --no-startup-id poweroff 
bindsym $mod+$smod+c reload 
exec --no-startup-id nitrogen --restore

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+v split v
bindsym $mod+h split h
# WorkSpaces

set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

# Switch to workspace n
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace n
bindsym $mod+$smod+1 move container to workspace $ws1
bindsym $mod+$smod+2 move container to workspace $ws2
bindsym $mod+$smod+3 move container to workspace $ws3
bindsym $mod+$smod+4 move container to workspace $ws4
bindsym $mod+$smod+5 move container to workspace $ws5
bindsym $mod+$smod+6 move container to workspace $ws6
bindsym $mod+$smod+7 move container to workspace $ws7
bindsym $mod+$smod+8 move container to workspace $ws8
bindsym $mod+$smod+9 move container to workspace $ws9
bindsym $mod+$smod+0 move container to workspace $ws10

